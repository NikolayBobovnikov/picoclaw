{
  "_comment_llmRegistry": "OPTION 1: LLM Registry Pattern (recommended for centralized model management)",
  "llmRegistry": {
    "providers": {
      "zai": {
        "provider": "zai",
        "apiKey": "${ZAI_API_KEY}",
        "endpoint": "https://api.z.ai/api/coding/paas/v4/chat/completions"
      },
      "anthropic": {
        "provider": "anthropic",
        "apiKey": "${ANTHROPIC_API_KEY}",
        "endpoint": "https://api.anthropic.com/v1/messages"
      },
      "openai": {
        "provider": "openai",
        "apiKey": "${OPENAI_API_KEY}",
        "endpoint": "https://api.openai.com/v1/chat/completions"
      }
    },
    "models": {
      "glm-4-plus": {
        "provider": "zai",
        "model": "GLM-4-Plus",
        "timeout": 10000,
        "maxTokens": 8192,
        "temperature": 0.7
      },
      "claude-opus": {
        "provider": "anthropic",
        "model": "claude-opus-4-5-20251101",
        "timeout": 10000,
        "maxTokens": 8192,
        "temperature": 0.7
      },
      "gpt-4": {
        "provider": "openai",
        "model": "gpt-4-turbo",
        "timeout": 10000,
        "maxTokens": 8192,
        "temperature": 0.7
      }
    }
  },
  "_comment_agents": "OPTION 2: Legacy Provider Format (providers section at bottom of file)",
  "agents": {
    "defaults": {
      "workspace": "~/.picoclaw/workspace",
      "restrict_to_workspace": true,
      "model": "glm-4-plus",
      "_comment_model": "When using llmRegistry, reference the model key (e.g., 'glm-4-plus'). For legacy format, use model name directly (e.g., 'glm-4.7')",
      "max_tokens": 8192,
      "temperature": 0.7,
      "max_tool_iterations": 20
    }
  },
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "YOUR_TELEGRAM_BOT_TOKEN",
      "proxy": "",
      "allow_from": [
        "YOUR_USER_ID"
      ]
    },
    "discord": {
      "enabled": false,
      "token": "YOUR_DISCORD_BOT_TOKEN",
      "allow_from": []
    },
    "maixcam": {
      "enabled": false,
      "host": "0.0.0.0",
      "port": 18790,
      "allow_from": []
    },
    "whatsapp": {
      "enabled": false,
      "bridge_url": "ws://localhost:3001",
      "allow_from": []
    },
    "feishu": {
      "enabled": false,
      "app_id": "",
      "app_secret": "",
      "encrypt_key": "",
      "verification_token": "",
      "allow_from": []
    },
    "dingtalk": {
      "enabled": false,
      "client_id": "YOUR_CLIENT_ID",
      "client_secret": "YOUR_CLIENT_SECRET",
      "allow_from": []
    },
    "slack": {
      "enabled": false,
      "bot_token": "xoxb-YOUR-BOT-TOKEN",
      "app_token": "xapp-YOUR-APP-TOKEN",
      "allow_from": []
    },
    "line": {
      "enabled": false,
      "channel_secret": "YOUR_LINE_CHANNEL_SECRET",
      "channel_access_token": "YOUR_LINE_CHANNEL_ACCESS_TOKEN",
      "webhook_host": "0.0.0.0",
      "webhook_port": 18791,
      "webhook_path": "/webhook/line",
      "allow_from": []
    },
    "onebot": {
      "enabled": false,
      "ws_url": "ws://127.0.0.1:3001",
      "access_token": "",
      "reconnect_interval": 5,
      "group_trigger_prefix": [],
      "allow_from": []
    }
  },
  "providers": {
    "anthropic": {
      "api_key": "",
      "api_base": ""
    },
    "openai": {
      "api_key": "",
      "api_base": "",
      "web_search": true
    },
    "openrouter": {
      "api_key": "sk-or-v1-xxx",
      "api_base": ""
    },
    "groq": {
      "api_key": "gsk_xxx",
      "api_base": ""
    },
    "zhipu": {
      "api_key": "YOUR_ZHIPU_API_KEY",
      "api_base": ""
    },
    "gemini": {
      "api_key": "",
      "api_base": ""
    },
    "vllm": {
      "api_key": "",
      "api_base": ""
    },
    "nvidia": {
      "api_key": "nvapi-xxx",
      "api_base": "",
      "proxy": "http://127.0.0.1:7890"
    },
    "moonshot": {
      "api_key": "sk-xxx",
      "api_base": ""
    },
    "ollama": {
      "api_key": "",
      "api_base": "http://localhost:11434/v1"
    },
    "zai": {
      "api_key": "YOUR_ZAI_API_KEY",
      "api_base": "https://api.z.ai/api/coding/paas/v4/chat/completions"
    }
  },
  "tools": {
    "web": {
      "brave": {
        "enabled": false,
        "api_key": "YOUR_BRAVE_API_KEY",
        "max_results": 5
      },
      "perplexity": {
        "enabled": false,
        "api_key": "pplx-xxx",
        "max_results": 5
      }
    },
    "cron": {
      "exec_timeout_minutes": 5
    }
  },
  "heartbeat": {
    "enabled": true,
    "interval": 30
  },
  "devices": {
    "enabled": false,
    "monitor_usb": true
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  },
  "observability": {
    "log_file": "",
    "log_level": "info",
    "enable_tracing": true,
    "trace_recorder": "default",
    "component_levels": {},
    "debug_components": []
  },
  "mcp": {
    "servers": [
      {
        "name": "filesystem",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/allowed/path"],
        "enabled": false
      },
      {
        "name": "github",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "env": ["GITHUB_TOKEN=ghp_your_token_here"],
        "enabled": false
      }
    ]
  }
}
